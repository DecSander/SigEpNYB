doctype html
html(lang="en")
  head
    include ../components/css.jade
    title Assign Duties | SigEp
  body
    include ../components/noscript.jade
    include ../components/navbar.jade
    .container-fluid
      .row
        .col-xs-12.col-md-6.col-md-offset-3
          .input-group
            input#eventId.form-control(type='number', name='eventId', min='0', placeholder='Event ID')
            span.input-group-btn
              button#getEvent.btn.btn-primary(type='submit', onclick='getEvent()') Get Duties
          br
          br
          #riskManagers
          #setClean
          #sobers
          #drivers
          button.btn.btn-primary#submitDuties(type='submit', onclick='submitDuties()') Submit Duties
    include ../components/footer.jade
    include ../components/js.jade
    script(src='js/navbar.js')
    script(src='js/assignduties.js')