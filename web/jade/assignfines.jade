doctype html
html(lang="en")
  head
    include ../components/css.jade
    title Assign Fines | SigEp
  body
    include ../components/noscript.jade
    include ../components/navbar.jade
    .container-fluid
      .row
        .col-xs-12.col-md-6.col-md-offset-3
          input#name.form-control.typeahead(type='text', placeholder='Name')
          br
          br
          input#reason.form-control(type='text', placeholder='Description')
          br
          .input-group
            span.input-group-addon $
            input#amount.form-control(type='number', placeholder='Amount', min='0')
          br
          input#fineSubmit.btn.btn-success.fullWidth(type='submit', value='Submit' onclick='submitFine()')
          br
          br
          table.table.table-hover
            thead
              tr
                th NetID
                th Reason
                th Amount
                th
                th
            tbody#fines
    include ../components/footer.jade
    include ../components/js.jade
    script(src='js/navbar.js')
    script(src='js/assignfines.js')