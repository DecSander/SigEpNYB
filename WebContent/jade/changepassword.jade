doctype html
html(lang="en")
  head
    include ../components/deps.jade
    title Change Password | SigEp
    script(src='js/navbar.js')
    script(src='js/changepassword.js')
  body
    include ../components/noscript.jade
    include ../components/navbar.jade
    .container-fluid
      .row
        .col-xs-12.col-md-4.col-md-offset-4
          input#oldPassword.form-control(type='password', name='oldPassword', placeholder='Old Password')
          br
          input#newPassword.form-control(type='password', name='newPassword', placeholder='New Password')
          br
          input#passwordConfirm.form-control(type='password', name='passwordConfirm', placeholder='Re-enter Password')
          br
          input#passwordSubmit.form-control.btn.btn-success(type='submit', name='passwordSubmit', onclick='changePassword()', value='Submit Password')
    include ../components/footer.jade